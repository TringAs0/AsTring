<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15.999dp"
    android:layout_marginEnd="7.999dp"
    >

    <TextView
        android:id="@+id/message_me_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.999dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/message_me_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFE233"
        app:cardCornerRadius="13dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/message_me_date"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/message_me_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_me_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="259.999dp"
                android:layout_marginBottom="7.999dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:text="MESSAGE"
                android:textColor="@color/black"
                android:textSize="14.9sp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/message_me_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="9.999sp"
        app:layout_constraintEnd_toStartOf="@+id/message_me_card"
        app:layout_constraintBottom_toBottomOf="@+id/message_me_card"/>






</androidx.constraintlayout.widget.ConstraintLayout>